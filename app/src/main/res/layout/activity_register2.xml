<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anchalgarg.myapplication.Register2Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg1">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"
            android:padding="10dp"
            android:text="@string/want_to_start_a_startup" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:padding="10dp"
            android:text="@string/please_provide_the_following_info" />

        <EditText
            android:id="@+id/idea_feild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_below="@+id/textView7"
            android:ems="10"
            android:hint="Idea"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/desc_field"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignLeft="@+id/idea_feild"
            android:layout_alignStart="@+id/idea_feild"
            android:layout_below="@+id/idea_feild"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:hint="description"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/desc_field"
            android:layout_alignStart="@+id/desc_field"
            android:layout_below="@+id/desc_field"
            android:layout_marginTop="17dp"
            android:text="Business Domain" />

        <Spinner
            android:id="@+id/business_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="11dp" />

        <EditText
            android:id="@+id/tentCost_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/business_spinner"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/business_spinner"
            android:layout_below="@+id/business_spinner"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="Tentative cost of project (Per Annum)(*1000$)"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/rev_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tentCost_field"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/tentCost_field"
            android:layout_below="@+id/tentCost_field"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="Revenue(*1000$)"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/per_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rev_field"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/rev_field"
            android:layout_below="@+id/rev_field"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="% Profit expected"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/per_profit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:paddingTop="20dp"
            android:text="Proceed to complete your profile" />


    </RelativeLayout>
</ScrollView>


